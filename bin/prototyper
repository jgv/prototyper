#!/usr/bin/env ruby

require 'pathname'
require 'optparse'
require 'pp'

bin_file = Pathname.new(__FILE__).realpath

$:.unshift File.expand_path("../../lib", bin_file)

require 'prototyper'

options = {}
options['type'] = :html # set default

OptionParser.new do |opts|

  opts.on("--type [TYPE]", [:sinatra, :html],
    "Select scaffolding type (sinatra, html)") do |t|
    options['type'] = t
  end

  opts.on("--html",
    "Generate HTML scaffolding") do |t|
    options['type'] = :html
  end

  opts.on("--sinatra",
    "Generate Sinatra scaffolding") do |t|
    options['type'] = :sinatra
  end

end.parse!

if ARGV.empty?
  puts "Prototyper requires an arguemnt, which will be the name of your new project directory"
elsif Dir.exists?(Dir.pwd + "/" + ARGV.first)
  puts "That directory already exists."
else
  Prototyper.generate(ARGV.first, options)
end
